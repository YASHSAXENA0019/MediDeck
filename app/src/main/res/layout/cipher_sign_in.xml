<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831">

    <TextView
        android:id="@+id/get_on_boar"
        android:layout_width="238dp"
        android:layout_height="46dp"
        android:layout_marginTop="60dp"
        android:gravity="top"
        android:text="@string/get_on_boar"
        android:textAppearance="@style/get_on_boar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.895"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name_si"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:gravity="top"
        android:text="@string/name"
        android:textAppearance="@style/name_si"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="183dp" />

    <EditText
        android:id="@+id/name_up_edittext"
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:background="@drawable/input_profile_draw"
        android:elevation="16dp"
        tools:layout_editor_absoluteX="155dp"
        tools:layout_editor_absoluteY="183dp" />
</androidx.constraintlayout.widget.ConstraintLayout>