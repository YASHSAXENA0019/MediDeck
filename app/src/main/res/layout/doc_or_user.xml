<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/getin_logo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831"
    android:backgroundTint="#222831"
    tools:context=".patient_home_page">


    <ImageView
        android:id="@id/getin_logo"
        android:layout_width="293dp"
        android:layout_height="291dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/whoareyou"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/whoareyou"
        android:layout_width="200dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="58dp"
        android:gravity="top"
        android:text="Who are you?"
        android:textAlignment="center"
        android:textAppearance="@style/user_name"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/radioGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="170dp"
        android:layout_height="100dp"
        android:layout_marginBottom="58dp"
        android:weightSum="1"
        app:layout_constraintBottom_toTopOf="@+id/complete_signup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/doctor_radio"
            android:layout_width="159dp"
            android:layout_height="45dp"
            android:layout_marginBottom="10dp"
            android:buttonTint="#393E46"
            android:checked="false"
            android:text=" Doctor"
            android:textColor="#00ADB5"
            android:textSize="30sp" />

        <RadioButton
            android:id="@+id/patient_radio"
            android:layout_width="159dp"
            android:layout_height="45dp"
            android:buttonTint="#393E46"
            android:checked="false"
            android:text=" Patient"
            android:textColor="#00ADB5"
            android:textSize="30sp" />

    </RadioGroup>

    <Button
        android:id="@+id/complete_signup"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/edit_round"
        android:text="Sign Up"
        android:textAppearance="@style/name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>