<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/getin_logo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#222831"
    android:backgroundTint="#222831"
    tools:context=".patient_home_page">


    <Button
        android:id="@+id/covid_hos"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="100dp"
        android:background="@drawable/edit_round"
        android:drawableRight="@drawable/covid19_hospitals"
        android:text="@string/covid_19_ca"
        android:textAppearance="@style/covid_19_ca"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="32dp"
        android:background="@drawable/edit_round"
        android:drawableRight="@drawable/rtcpr_logo"
        android:text="@string/laboratorie"
        android:textAppearance="@style/covid_19_ca"
        app:layout_constraintBottom_toTopOf="@+id/covid_hos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/cowin_button"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="32dp"
        android:background="@drawable/edit_round"
        android:drawableRight="@drawable/cowin_logo"
        android:text="Vaccine"
        android:textAppearance="@style/covid_19_ca"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/what_need"
        android:layout_width="250dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="32dp"
        android:gravity="center_horizontal|top"
        android:text="@string/what_do_you"
        android:textAppearance="@style/name"
        app:layout_constraintBottom_toTopOf="@+id/cowin_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    />
</androidx.constraintlayout.widget.ConstraintLayout>